@model Quiz_Application.Services.Entities.Exam
@{ ViewData["Title"] = "Add Exam Page"; }

<!-- Page Container -->
<div class="w3-container w3-content" style="max-width:1400px;margin-top:80px">
    <!-- The Grid -->
    <div class="w3-row">
        <!-- Left Column -->
        <form class="w3-container" asp-action="AddExam" asp-antiforgery="true" asp-controller="Exam">
            <!-- Middle Column -->
            <div class="w3-card-12">
                <header class="w3-container w3-blue" style="text-align:right">
                    <h2>Exam Input</h2>
                </header>
                <div class="w3-container w3-card w3-white">

                    <div class="form-group" style="padding:10px">
                        <label asp-for="Name" class="control-label">Exam Name</label>
                        <input asp-for="Name" class="w3-input w3-border w3-round" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="padding:10px">
                        <label asp-for="FullMarks" class="control-label">Full Marks</label>
                        <input asp-for="FullMarks" class="w3-input w3-border w3-round" />
                        <span asp-validation-for="FullMarks" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="padding:10px">
                        <label asp-for="Duration" class="control-label">Duration (Minutes)</label>
                        <input asp-for="Duration" class="w3-input w3-border w3-round" />
                        <span asp-validation-for="Duration" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="padding:10px">
                        <label asp-for="YoutubeTutorialLink" class="control-label">Youtube Tutorial Link</label>
                        <input asp-for="YoutubeTutorialLink" class="w3-input w3-border w3-round" />
                        <span asp-validation-for="YoutubeTutorialLink" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="padding:10px">
                        <label asp-for="TutorialLink" class="control-label">Other Tutorial Link</label>
                        @*<textarea asp-for="StudyTopics" class="form-control" name="editor" />*@
                        <textarea asp-for="TutorialLink" class="w3-input w3-border w3-round"></textarea>
                        <span asp-validation-for="TutorialLink" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="padding:10px">
                        <label asp-for="PresentationLink" class="control-label">Presentation File Link</label>
                        @*<textarea asp-for="StudyTopics" class="form-control" name="editor" />*@
                        <textarea asp-for="PresentationLink" class="w3-input w3-border w3-round"></textarea>
                        <span asp-validation-for="PresentationLink" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="padding:10px">
                        <label asp-for="PDFLink" class="control-label">PDF File Upload</label>
                        <input class="w3-input w3-border w3-round" type="file" name="PDFFile" multiple />
                    </div>
                    <!--<div class="form-group" style="padding:10px">
                        <label asp-for="PDFLink" class="control-label">PDF File Upload</label>-->
                        @*<textarea asp-for="StudyTopics" class="form-control" name="editor" />*@
                        <!--<textarea asp-for="PDFLink" class="w3-input w3-border w3-round"></textarea>
                        <span asp-validation-for="PDFLink" class="text-danger"></span>
                    </div>-->
                    <div class="form-group" style="padding:10px">
                        <label asp-for="Details" class="control-label">Study Topic</label>
                        @*<textarea asp-for="StudyTopics" class="form-control" name="editor" />*@
                        <textarea asp-for="Details" class="editor w3-input w3-border w3-round"></textarea>
                        <span asp-validation-for="Details" class="text-danger"></span>
                    </div>
                    <br />
                    <div>
                        <button class="w3-button w3-block w3-blue"><i class="fa fa-check"></i> Save</button>
                    </div>

                </div>
                <!-- End Middle Column -->
            </div>
        </form>

    </div>
    <!-- End Page Container -->
</div>
<br />

@section Scripts{

    <!-- Include CK Editor -->
    <script src="https://cdn.ckeditor.com/ckeditor5/33.0.0/classic/ckeditor.js"></script>

    <script type="text/javascript">ClassicEditor
            .create(document.querySelector('.editor'))
            .then(editor => {
                console.log(editor);
            })
            .catch(error => {
                console.error(error);
            });</script>

}