@model Quiz_Application.Services.Entities.Exam
@{ ViewData["Title"] = "Study Page"; }

<!-- Page Container -->
<div class="w3-container w3-content" style="max-width:1400px;margin-top:80px">
    <!-- The Grid -->
    <div class="w3-row">
        <!-- Left Column -->
        <form class="w3-container" asp-action="AddExam" asp-antiforgery="true" asp-controller="Exam">
            <!-- Middle Column -->
            <div class="w3-card-12">
                <header class="w3-container w3-blue" style="text-align:right">
                    <h2>Study Material</h2>
                </header>
                <div class="w3-container w3-card w3-white">

                    <div class="jumbotron" style="background:white">
                        @Html.Raw(@Model.Details)
                        <br />
                        <hr />
                        <a class="btn btn-success" asp-action="WatchTutorial" asp-controller="Exam" asp-route-id="@Model.ExamID" title="Watch Tutorial">Watch Tutorial</a>
                    </div>



                </div>
                <!-- End Middle Column -->
            </div>
        </form>

    </div>
    <!-- End Page Container -->
</div>
<br />